class Solution{
public:
    int heapHeight(int N, int arr[])
    {
        // code here
        return floor(log2(N));
    }
};

//or

class Solution{
public:
    int heapHeight(int N, int arr[])
    {
        // code here
        int count=0;
        while(N)
        {
            count++;
            N=N/2;
        }
        return count-1;
    }
};
