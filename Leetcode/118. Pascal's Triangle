//Brut forace apporach (will not pass all the testcases)
class Solution {
public:

    int factorial(int x)
    {
        if(x==0)
        return 1;
        return x*factorial(x-1);
    }
    
    vector<vector<int>> generate(int numRows) 
    {
        vector<vector<int>>ans;
        for(int i=0;i<numRows;i++)
        {
            vector<int>temp;
            for(int j=0;j<=i;j++)
            {
                int x=factorial(i)/(factorial(j)*factorial(i-j));
                temp.push_back(x);
            }
            ans.push_back(temp);
        }
        return ans;
    }
};
