#include<bits/stdc++.h>
using namespace std;

int main()
{
    int i,j,t,k;
    cin>>t;
    
    for(j=0;j<t;j++){
        long long int x,y,sum=0;
        cin>>x>>y;
        
        if(x%y==0 and y%x==0){
            cout<<0<<endl;
        }
        else if(__gcd(x,y)>1){
            cout<<0<<endl;
        }
        else if(__gcd(x+1,y)>1){
            cout<<1<<endl;
        }
        else if(__gcd(x,y+1)>1){
            cout<<1<<endl;
        }
        else{
            cout<<2<<endl;
        }
        
        
    }//testcase loop...
}
