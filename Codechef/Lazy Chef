#include<bits/stdc++.h>
#include <stdio.h>
using namespace std;
int main()
{
    int t,i,j;
    cin>>t;
    for(j=0;j<t;j++){
        int x,m,d;
        cin>>x>>m>>d;
        if( (x*m)<=(d+x) ){
            cout<<(x*m)<<endl;
        }
        else
        {
            cout<<(x+d)<<endl;
        }
    }
}
