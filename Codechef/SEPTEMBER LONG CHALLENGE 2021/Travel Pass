#include <bits/stdc++.h>
using namespace std;
int main()
{
    int i,t,j;
    cin>>t;
    
    for(j=0;j<t;j++){
        int n,a,b,sum=0;
        cin>>n>>a>>b;
        char r[n];
        
        for(i=0;i<n;i++){
            cin>>r[i];
        }
        
        for(i=0;i<n;i++){
            if(r[i]==48){
                sum=sum+a;
            }
            else{
                sum=sum+b;
            }
        }
        cout<<sum;
        cout<<endl;
        
    }
    
}
