#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    
    while(t)
    {
        int n,i=0,ans=0;
        cin>>n;
        string s; 
        cin>>s;
        
        while(s[i]=='1')
        {
            i++;
            ans++;
        }
        cout<<ans<<endl;
        t--;
    }
}
