#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    
    while(t)
    {
        int n,ans=0;
        cin>>n;
        string s; 
        cin>>s;
        
        for(int i=0;i<n;i++)
        {
            ans++;
            if(s[i+1]=='1')
            break;
        }
        cout<<ans<<endl;
        t--;
    }
}
